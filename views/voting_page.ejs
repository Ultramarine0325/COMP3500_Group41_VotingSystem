<!DOCTYPE html>
<html>
<head>
    <title>Vote Now</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <style>
        .btn-check:checked + .btn-outline-primary {
            background-color: #0d6efd;
            color: white;
            border-color: #0d6efd;
        }
        .option-label {
            text-align: left;
            padding: 15px 20px;
            font-size: 1.1rem;
            margin-bottom: 10px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card main-card">
                    <div class="card-header bg-primary text-white p-4" style="border-radius: 15px 15px 0 0;">
                        <h3 class="mb-1 text-white"><%= election.title %></h3>
                        <p class="mb-0 opacity-75"><%= election.description %></p>
                    </div>
                    
                    <div class="card-body p-4">
                        <form action="/vote/<%= election._id %>" method="POST">
                            <h5 class="mb-3">Select your choice:</h5>
                            
                            <div class="mb-4">
                                <% election.candidates.forEach(function(candidate, index) { %>
                                    <input type="radio" class="btn-check" name="selectedCandidate" id="option<%= index %>" value="<%= candidate.name %>" required>
                                    <label class="btn btn-outline-primary w-100 option-label d-flex justify-content-between align-items-center" for="option<%= index %>">
                                        <span><%= candidate.name %></span>
                                        <span class="badge bg-light text-dark">Option</span>
                                    </label>
                                <% }); %>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">Submit Vote</button>
                                <a href="/dashboard" class="btn btn-light">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
