<!DOCTYPE html>
<html>
<head>
    <title>Voter Center</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <nav class="navbar navbar-dark bg-transparent mb-4 pt-3">
        <div class="container">
            <span class="navbar-brand h1 mb-0">Voter Center</span>
            <div class="d-flex align-items-center">
                <span class="text-white me-3"><%= user.fullName %> (<%= user.eligibleGroup %>)</span>
                <a href="/" class="btn btn-outline-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>
    <div class="container">
        <h3 class="text-white mb-4">Active Elections</h3>
        
        <% if(elections.length === 0) { %>
            <div class="alert alert-light" role="alert">
                <h4 class="alert-heading">No pending elections!</h4>
                <p>You have completed all voting tasks or there are no elections open for your group.</p>
            </div>
        <% } else { %>
            <div class="row">
                <% elections.forEach(function(election) { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card main-card h-100">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= election.title %></h5>
                                <p class="card-text text-muted flex-grow-1">
                                    <%= election.description ? election.description : 'No description provided.' %>
                                </p>
                                <div class="mt-3">
                                    <p class="mb-2"><small class="text-danger">Ends: <%= new Date(election.endDate).toLocaleDateString() %></small></p>
                                    <a href="/vote/<%= election._id %>" class="btn btn-primary w-100">Vote Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</body>
</html>
